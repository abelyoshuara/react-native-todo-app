    "react-native": "^0.74.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@eslint/js": "^9.3.0",
    "@testing-library/react-native": "^12.5.1",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-test-renderer": "^18.3.0",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.3.0",
    "jest": "^29.4.0",
    "jest-expo": "~51.0.2",
    "prettier": "3.2.5",
    "typescript": "~5.3.3",
    "typescript-eslint": "^7.11.0"
  },
  "private": true,
  "jest": {
